<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundrepeat">

    <Button
        android:id="@+id/lightShip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="129dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/rounded_shape_button"
        app:backgroundTint="@color/colorBlue"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/balancedShip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="129dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/rounded_shape_button"
        android:clickable="true"
        app:backgroundTint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lightShip"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/heavyShip"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/rounded_shape_button"
        app:backgroundTint="@color/colorAquaMarine"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/balancedShip"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>